{
	"compilerOptions": {
		"outDir": "./js",
		"allowJs": false,
		"module": "commonjs",
		"moduleResolution": "node",
		"target": "es6",
		"baseUrl": "./ts",
		"lib": [
			"ES2020.Promise",
			"dom"
		],
		"paths": {
			"@helpers/*": ["helpers/*"],
			"@models/*": ["models/*"],
			"@generators/*": ["generators/*"],
			"@renderers/*": ["renderers/*"]
		},
		"declaration": true
	},
	"include": ["./ts/**/*"]
}
